 {
    "global_config": {
        "max_header_field_len": 30,
        "max_header_value_len": 180,
        "enable_header_field_len_check": true,
        "enable_header_value_len_check": true,
        "enable_request_type_check": true,
        "enable_param_len_check": true,
        "enable_param_whitelist_check": true,
        "enable_url_directory_traversal_check": true,
        "enable_csrf_protection": true,
        "session_life_seconds": 300,
        "enable_https": false
    },

    "default_page_config": {
        "request_types": ["GET", "HEAD"],
        "restrict_params": false,
        "requires_login": false,
        "has_csrf_form": false,
        "receives_csrf_form_action": false,

        "max_param_len": 30,
        "whitelist": "[a-zA-z0-9_]"
    },
    
    "page_config": {
        "/": {
            "restrict_params": true,
            "has_csrf_form": true
        },
        
        "/index.html": {
            "restrict_params": true,
            "has_csrf_form": true
        },
        
        "/cgi-bin/login": {
            "request_types": ["POST"],
            "params": {
                "user": {
                    "whitelist": "[a-z0-9_]"
                },
                "passwd": {
                    "max_param_len": 30,
                    "whitelist": "[a-zA-Z0-9_]"
                }
            }
        },
        
        "/cgi-bin/upload": {
            "request_types": ["POST"],
            "receives_csrf_form_action": true,
            "params": {
                "file": {
                    "max_param_len": 1e6,
                    "whitelist": "[\\x00-\\xff]"
                },
                
                "base64_data": {
                    "max_param_len": 1e6,
                    "whitelist": "[A-Za-z0-9\\+/=]"
                }
            }
        },
        
        "/cgi-bin/favorites": {
            "request_types": ["POST"],
            "receives_csrf_form_action": true,
            "params": {
                "favorite_letters": {
                    "max_param_len": 26,
                    "whitelist": "[a-z]"
                },
                
                "favorite_vowels": {
                    "max_param_len": 6,
                    "whitelist": "[aeiouy]"
                },
                
                "favorite_number": {
                    "max_param_len": 3,
                    "whitelist": "[0-9]"
                },
                
                "favorite_quote": {
                    "max_param_len": 200,
                    "whitelist": "[A-Za-z0-9, \"\\.!?]"
                }
            }
        }
    }
}
